<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <!-- Database connection settings -->
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://192.168.0.20:3306/african_coffee</property>
        <property name="connection.username">perscholas_user</property>
        <property name="connection.password">perscholas</property>

        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!--    Mapping entity file -->
        <mapping class="org.demo.entity.Drink"/>
        <mapping class="org.demo.entity.CoffeeOrder"/>
        <mapping class="org.demo.entity.Customer"/>

    </session-factory>
</hibernate-configuration>